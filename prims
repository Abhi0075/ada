#include <iostream>
using namespace std;
void prims(int n, int cost[10][10])
{
    int i, j, u, v, min, mincost = 0, visited[10], ne = 1;
    for (i = 1; i <= n; i++)
        visited[i] = 0;
    cout << "Edges considered for mst are: " << endl;
    visited[1] = 1;
    while (ne < n)
    {
        for (i = 1, min = 999; i <= n; i++)
            for (j = 1; j <= n; j++)
                if (cost[i][j] < min)
                    if (visited[i] == 0)
                        continue;
                    else
                    {
                        min = cost[i][j];
                        u = i;
                        v = j;
                    }
        if (visited[u] == 0 || visited[v] == 0)
        {
            cout << ne++ << " edge (" << u << " , " << v << ") = " << min << endl;
            mincost = mincost + min;
            visited[v] = 1;
        }
        cost[u][v] = cost[v][u] = 999;
    }
    cout << "Cost of constructing MST is " << mincost << endl;
}
int main()
{
    int i, j, n, cost[10][10];
    cout << "Read number of nodes" << endl;
    cin >> n;
    cout << "Enter cost matrix" << endl;
    for (i = 1; i <= n; i++)
    {
        for (j = 1; j <= n; j++)
        {
            cin >> cost[i][j];
            if (cost[i][j] == 0)
                cost[i][j] = 999;
        }
    }
    prims(n, cost);
    return 0;
}
